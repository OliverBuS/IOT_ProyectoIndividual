<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="104dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPerfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/textFondo"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.circleImageView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/imgPerfil"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/teNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodrigo"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginVertical="4dp"
            android:id="@+id/teEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rodrigo"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitacion"
            android:textColor="#A65DB1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#5455A9" />


</RelativeLayout>